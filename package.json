{
  "name": "irma-gemeente",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "start": "per-env",
    "start:production": "yarn -s serve",
    "start:development": "yarn -s watch",
    "build": "preact build --template ./src/template.html --no-prerender; ./rename_build.sh; scp build/bundle.js sb:/var/www/scriptbase.org/bundle.js",
    "serve": "yarn build && preact serve",
    "watch": "preact watch --template ./src/template.html",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "per-env": "^1.0.2",
    "preact-cli": "^2.1.0",
    "preact-render-spy": "^1.2.1"
  },
  "dependencies": {
    "@privacybydesign/irmajs": "^0.1.3",
    "i18n-js": "^3.2.2",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7"
  }
}
